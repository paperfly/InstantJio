<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customColorPrimary"
             tools:context=".event.EventInvitedNotifyActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/event_jio_big_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="You've been\nJio-ed!"
        android:textColor="@color/customColorPrimaryDark"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/event_action_attending"
        android:layout_width="@dimen/standard_imagecon_size"
        android:layout_height="@dimen/standard_imagecon_size"
        android:layout_gravity="bottom|start"
        android:background="@drawable/accept_button"
        android:src="@drawable/ic_attend"/>

    <ImageButton
        android:id="@+id/event_action_not_attending"
        android:layout_width="@dimen/standard_imagecon_size"
        android:layout_height="@dimen/standard_imagecon_size"
        android:layout_gravity="bottom|end"
        android:background="@drawable/cancel_button"
        android:src="@drawable/ic_close_white" />

