<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paperfly.instantjio.event.EventTemplateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="3">

            <ImageView
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:contentDescription="Event Title"
                android:src="@drawable/ic_insert_invitation"
                app:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/event_template_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:maxLines="1"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:singleLine="true"
                app:layout_columnSpan="2"
                app:layout_columnWeight="10"/>

            <Space
                android:layout_height="@dimen/activity_vertical_margin"
                app:layout_columnSpan="3"
                app:layout_gravity="fill"/>

            <ImageView
                android:contentDescription="Event Time"
                android:src="@drawable/ic_query_builder"
                app:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="4dp"
                android:paddingStart="4dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="Today"
                android:textAppearance="@android:style/TextAppearance.Medium"
                app:layout_columnWeight="6"/>

            <Button
                android:id="@+id/event_template_start_time"
                style="@style/borderlessButton"
                android:gravity="end|center_vertical"
                android:text="Start Time"
                app:layout_column="2"
                app:layout_columnWeight="4"/>

            <Button
                android:id="@+id/event_template_end_time"
                style="@style/borderlessButton"
                android:gravity="end|center_vertical"
                android:text="End Time"
                app:layout_column="2"
                app:layout_columnWeight="4"/>

            <Space
                android:layout_height="@dimen/activity_vertical_margin"
                app:layout_columnSpan="3"
                app:layout_gravity="fill"/>

            <ImageView
                android:contentDescription="Event Location"
                android:src="@drawable/ic_location_on"
                app:layout_gravity="center_vertical"/>

            <AutoCompleteTextView
                android:id="@+id/event_template_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:maxLines="1"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:singleLine="true"
                app:layout_columnSpan="2"
                app:layout_columnWeight="10"/>

            <Space
                android:layout_height="@dimen/activity_vertical_margin"
                app:layout_columnSpan="3"
                app:layout_gravity="fill"/>

            <ImageView
                android:contentDescription="Event Description"
                android:src="@drawable/ic_comment"
                app:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/event_template_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:maxLines="1"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:singleLine="true"
                app:layout_columnSpan="2"
                app:layout_columnWeight="10"/>

            <Space
                android:layout_height="@dimen/activity_vertical_margin"
                app:layout_columnSpan="3"
                app:layout_gravity="fill"/>

            <ImageView
                android:contentDescription="Event Participating Groups"
                android:src="@drawable/ic_group"
                app:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/event_template_invite_group"
                style="@style/borderlessButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="Invite group"
                app:layout_columnSpan="2"
                app:layout_columnWeight="10"/>

            <Space
                android:layout_height="@dimen/activity_vertical_margin"
                app:layout_columnSpan="3"
                app:layout_gravity="fill"/>

            <ImageView
                android:contentDescription="Event Participating Friends"
                android:src="@drawable/ic_person"
                app:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/event_template_invite_friend"
                style="@style/borderlessButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="Invite friend"
                app:layout_columnSpan="2"
                app:layout_columnWeight="10"/>

            <Space
                android:layout_height="@dimen/activity_vertical_margin"
                app:layout_columnSpan="3"
                app:layout_gravity="fill"/>

        </android.support.v7.widget.GridLayout>

        <Button
            android:id="@+id/event_template_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ok_button"
            android:text="Create Template"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
